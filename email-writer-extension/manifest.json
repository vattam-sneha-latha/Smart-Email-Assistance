{
  "name": "Email Writer Assistance",
  "description": "AI powered email reply generator",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Email Writer Assistant",
    "default_icon": "icons/image.png"
  },
  "host_permissions": [
    "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],
  "permissions":["activeTab","storage"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css":["content.css"],
      "run_at":"document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": [ "*://mail.google.com/*" ]
    }
  ]

}